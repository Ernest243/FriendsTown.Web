<h4>Create Event</h4>
<div class="container" id="appEvents">
    <form asp-action="CreateWithOffers">
        <div class="border border-primary p-2 mb-1">
            <div class="form-group row">
                <label for="date" class="control-label col-1">Date:</label>
                <input name="date" type="date" class="form-control col-3 " />
            </div>
            <div class="form-group row">
                <label for="idOrganizer" class="control-label col-1">Organizer:</label>
                <select name="idOrganizer" class="form-control col-4 mr-2">
                    <option v-for="friend in friends" v-bind:value="friend.Id">
                        {{friend.Name}}
                    </option>
                </select>
                <label for="idActivity" class="control-label col-1">Activity:</label>
                <select name="idActivity" class="form-control col-4">
                    <option v-for="activity in activities" v-bind:value="activity.Id">
                        {{activity.Name}}
                    </option>
                </select>
            </div>
            <div class="form-group row">
                <label for="city" class="control-label col-1">City:</label>
                <input name="city" class="form-control col-4 mr-2" />
                <label for="street" class="control-label col-1">Street:</label>
                <input name="street" class="form-control col-4 " />
            </div>
            <div class="form-group row">
                <label for="number" class="control-label col-1">Number:</label>
                <input name="number" class="form-control col-4 mr-2" />
                <label for="reference" class="control-label  col-1">Reference:</label>
                <input name="reference" class="form-control col-4" />
            </div>
        </div>
        <div class="form-group p-3 border border-primary">
            <div class="row p-2" v-for="of in offers">
                <label for="offers" class="control-label col-2">Offer:</label>
                <input name="offers" v-model="of.description" class="form-control col-8" />
            </div>
            <div class="row">
                <span class="col-10"></span>
                <span class="col-2">
                    <Button type="button" v-on:click="addOffer()" class="btn btn-primary">
                        Add Offer
                    </Button>
                </span>
            </div>
        </div>
        <div class="form-group row p-2">
            <a asp-action="ListWithOffers" class="btn btn-primary">Back to the List</a>
            <input type="submit" value="Save All" class="btn btn-primary ml-2" />
        </div>
    </form>
</div>

<script src="https://unpkg.com/vue@3.0.3/dist/vue.global.js"></script>
<script>
    const appEvents = Vue.createApp({
        data() {
            return {
                activities: @Html.Raw(ViewBag.ActivitiesList),
                friends: @Html.Raw(ViewBag.FriendsList),
                offers: [
                    { description: "" }
                ]
            }
        },
        methods:
        {
            addOffer() {
                this.offers.push({ description: "" });
            }
        },
        mounted() {
        }
    });
    appEvents.mount('#appEvents');
</script>

